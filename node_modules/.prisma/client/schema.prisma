generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  boleta          Int           @id @unique
  email           String        @unique
  nombre          String
  contrasena      String
  esAdministrador Boolean
  request         BookRequest[]
}

model Libro {
  id_libro          Int           @id @default(autoincrement())
  titulo            String        @db.Text
  autor             String        @db.Text
  portada           String        @db.LongText
  descripcion       String        @db.Text
  cantidad          Int
  cantidadPrestados Int
  request           BookRequest[]
}

model BookRequest {
  id_request   Int       @id @default(autoincrement())
  book         Libro     @relation(fields: [bookId], references: [id_libro])
  bookId       Int
  user         User      @relation(fields: [userBoleta], references: [boleta])
  userBoleta   Int
  fechaRecoger DateTime  @db.Date
  aceptado     Boolean
  fechaEntrega DateTime? @db.Date
}
